<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <br><br>
        
     

        <div class="col-8 offset-2">
    <h2>UPDATE THE LISTING </h2>
    <form action="/listing/<%= toupdate._id %>?_method=PUT" method="post" novalidate class="needs-validation">
        <div class="mb-3">
              <label for="title" class="form-lable">Title</label>
        <input type="text" name="listing[title]" id="" class="form-control" value="<%= toupdate.title %>" required>
         <div class="invalid-feedback">
                        Please provide a valid title.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
        </div>
        <br> <br>
            <div class="mb-3">
                <label for="description" class="form-lable">Description</label>
        <textarea name="listing[description]" id="" class="form-control"  required><%= toupdate.description %> </textarea>
         <div class="invalid-feedback">
                        Please provide a valid description.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
        </div>
        <br><br>
            <div class="mb-3">
          <label for="image" class="form-lable">Image URL</label>
        <input type="text" name="listing[image]"  class="form-control" required value="<%= toupdate.image %>">
         <div class="invalid-feedback">
                        Please provide a valid image url.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
        </div>
        <br><br>
            <div class="mb-3">
                 <label for="price" class="form-lable">Price</label>
        <input type="number" name="listing[price]" class="form-control" required value="<%= toupdate.price %>">
         <div class="invalid-feedback">
                        Please provide a valid price.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
       </div>
        <br><br>
          <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
        <input type="text" name="listing[location]" class="form-control" required value="<%= toupdate.location %>">
         <div class="invalid-feedback">
                        Please provide a valid location.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
        </div>
           <br><br>
               <div class="mb-3">
                <label for="country" class="form-lable">country</label>
        <input type="text" name="listing[country]" id="" class="form-control" required value="<%= toupdate.country %>">
         <div class="invalid-feedback">
                        Please provide a valid country.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
        </div>
           
        <br><br>
        <div class="btn-centre ">
        <button type="submit" class="btn btn-dark ">UPDATE</button>
        </div>
       <br><br>
    </form>
    
    </div>
    </div>
</body>
