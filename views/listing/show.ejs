<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
     <h3>listings in detail</h3>
    <div class="card" >
  <img src="<%=ALLlisting.image %>" class="card-img-top show-img" alt="...">
  <div class="card-body ">
     
        <p><b><%= ALLlisting.title %></b></p>
        <p><%= ALLlisting.description%></p>
        <p>&#8377;<%= ALLlisting.price.toLocaleString("en-IN")%></p>
        <p><%= ALLlisting.location %></p>
        <p><%= ALLlisting.country %></p>
        <div class="btn-class offset-2">
    <div class="col-1 btn-edit">     <a href="/listing/<%= ALLlisting._id%>/edit "  class="btn-centre btn btn-dark add-btn">Edit</a></div>
    <div class="col-md-4 btn-delete">    <form action="/listing/<%= ALLlisting._id %>?_method=DELETE" method="post"><button class="btn add-btn btn-dark btn-centre">Delete</button></form></div>
    </div>
  </div>
</div>
   </div>
</div>
</body>
