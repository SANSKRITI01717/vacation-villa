<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
     <h3>listings in detail</h3>
    <div class="card listing-card" >
  <img src="<%=ALLlisting.image %>" class="card-img-top show-img" alt="...">
  <div class="card-body ">
     
        <p><b><%= ALLlisting.title %></b></p>
        <p><%= ALLlisting.description%></p>
        <p>&#8377;<%= ALLlisting.price.toLocaleString("en-IN")%></p>
        <p><%= ALLlisting.location %></p>
        <p><%= ALLlisting.country %></p>
        <div class="btn-class offset-2">
    <div class="col-1 btn-edit">     <a href="/listing/<%= ALLlisting._id%>/edit "  class="btn-centre btn btn-dark add-btn">Edit</a></div>
    <div class="col-md-4 btn-delete">    <form action="/listing/<%= ALLlisting._id %>?_method=DELETE" method="post"><button class="btn add-btn btn-dark btn-centre">Delete</button></form></div>

    </div>
    <hr>
    <div class="review col-8 offset-2 mb-3 mt-3">
      <h1>
      Leave a Review
    </h1>
    <form action="/listing/<%= ALLlisting._id%>/reviews" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-lable">Rating</label>
        <input type="range" min="1" max="5" id="rating"  class="form-range" name="review[rating]">
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-lable">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5"  class="form-control" required>let others know your Experience! </textarea>
        <div class="invalid-feedback">
          please submit some review!
        </div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>

    </form>

  </div>
  <HR></HR>

 <p> <b>View Reviews</b></p>
 <div class="row">
 <% for(review of ALLlisting.review){ %>
    <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
           <h5 class="card-title">umi</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating%> stars</p>

        </div>
        <form action="/listing/<%= ALLlisting._id%>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="POST">
          <button class="btn btn-sm btn-dark">delete</button>
        </form>
    </div>

    <% } %>
  </div>
  </div>
</div>
   </div>
</div>
</body>
